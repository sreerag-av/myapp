
<div class="edit">
<h1>Edit</h1>
<%= flash.now[:now] if flash.now[:now]%>
<%=form_tag users_update_path(id: params[:id]) do %>
<%=  label_tag 'Username'%>
<%=  text_field_tag 'name',@user.name %>
<br/>
<br/>
<%=  label_tag 'Old Password'%>
<%=  text_field_tag 'password_old'%>
<br/>
<br/>
<%=  label_tag 'New Password'%>
<%=  text_field_tag 'password_new'%>
<br/>
<br/>
<%=  label_tag 'Password Confirmation'%>
<%=  text_field_tag 'password_confirmation'%>
<br/>
<br/>
<%=  submit_tag 'Submit'%>
<%end%>
<br/>
<%= link_to "Logout", login_logout_path , data: { confirm: 'Are you sure?' }%>
</div>
